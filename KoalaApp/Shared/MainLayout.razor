@inherits LayoutComponentBase

<div class="page">
    @if (navMenuHidden == false)
    {
        <div class="sidebar">
            <NavMenu />
        </div>
        <button @onclick="ToggleNavMenuHidden" type="button" class="btn btn-primary hideSidebarBtn"><span class="oi oi-arrow-left"></span></button>
    }
    else
    {
        <button @onclick="ToggleNavMenuHidden" type="button" class="btn btn-primary hideSidebarBtn"><span class="oi oi-arrow-right"></span></button>
    }

    <div class="main">
        <div class="content px-4">
            @Body
        </div>
    </div>
</div>

@code {
    private bool navMenuHidden = false;

    private void ToggleNavMenuHidden()
    {
        navMenuHidden = !navMenuHidden;
    }
}